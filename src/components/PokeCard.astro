---
import { Image } from 'astro:assets';
const { id } = Astro.props;
const response = await fetch('https://pokeapi.co/api/v2/pokemon/1').then((response) =>
  response.json()
);;

---


<div class="border-2 border-white max-w-52">
    <h1>{id}</h1>
    <h6>{response.name}</h6>
    <Image src={response.sprites.front_default} alt="A bird." width="300" height="300" />
</div>